{
  "title": "Test Pipeline in JSON",
  "arguments": [
    {      
      "type": "String"
      , "name": "key"
    }
    , {
      "type": "Integer"
      , "name": "port"
    }
  ],
  "sourceEndpoints": [
    
    { "name": "MS SQL Server",
      "urlTemplate": "sqlserver://localhost:<args.port>/test",
      "username": "sa",
      "password": "T0p-Secret"
    },
    { "name": "MySQL",
      "urlTemplate": "mysql://localhost:<args.port>/test",
      "username": "user",
      "password": "T0p-Secret"
    }
    ,
    { "name": "PostgreSQL",
      "urlTemplate": "postgresql://localhost:<args.port>/test",
      "username": "postgres",
      "password": "T0p-Secret"
    }
  ]
  ,
  "source": {    
    "type": "SQL",
    "endpointTemplate": "<args.key>",
    "streamingFetchSize": 7,
    "query": "select d.id, d.instant, c.name as ref, d.value from Data d join Colours c on d.colourId = c.id where d.id < 20 order by d.id"
  } 
  ,
  "processors": [
    {
      "type":"GROUP_CONCAT",
      "delimiter":",",
      "parentIdColumns":["id"],
      "innerJoin":false,
      "childIdColumns":["dataid"],
      "parentValueColumn":"children",      
      "childValueColumn":"value",
      "input": {
        "source": {    
          "type": "SQL",
          "endpointTemplate": "<args.key>",
          "streamingFetchSize": 10,
          "query": "select dataId, value from ManyData m join RefData r on r.id = m.refId where dataId < 20 order by dataId, sort"
        }
      }
    }
    , 
    {
      "type":"LIMIT",
      "limit":13
    }
  ]
  ,
  "formats": [{
    "type": "JSON"
  }]
}